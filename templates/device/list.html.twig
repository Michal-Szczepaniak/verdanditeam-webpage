<!-- Sidebar -->
<section id="sidebar">
    <div class="inner">
        <nav>
            <ul>
                <li onclick="window.location.href = '/'">Main Page</li>
                <li><a href="#deviceIntro">Intro</a></li>
                <li><a href="#one">List of devices</a></li>
                <li><a href="#three">Get in touch</a></li>
            </ul>
        </nav>
    </div>
</section>

<!-- Wrapper -->
<div id="wrapper">

    <!-- Intro -->
    <section id="deviceIntro" class="wrapper style1 fullscreen fade-up">
        <div class="inner">
            <h1>Devices</h1>
            <p>List of all devices maintained by VerdandiTeam</p>
            <ul class="actions">
                <li><a href="/" class="button">Go back to main page</a></li>
            </ul>
        </div>
    </section>

    <!-- One -->
    <section id="one" class="wrapper style2 spotlights">
        {% for device in devices %}
            <section>
                <div class="content">
                    <div class="inner">
                        <h2>{{ device.namePretty }}</h2>
                        <p>{{ device.descriptionLong }}</p>
                        <ul class="actions">
                            <li><a href="/device/{{ device.name }}" class="button">Learn more</a></li>
                        </ul>
                    </div>
                </div>
            </section>
        {% endfor %}
    </section>

    <!-- Three -->
    <section id="three" class="wrapper style1 fade-up">
        <div class="inner">
            <h2>Get in touch</h2>
            <p>If you have any questions we are happy to help. Support is part of our quality that we are providing. If you have any problems installing or using our ports or any questions we are here to help.</p>
            <div class="split style1">
                <section>
                    <form method="post" action="#">
                        <div class="field half first">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" />
                        </div>
                        <div class="field half">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" />
                        </div>
                        <div class="field">
                            <label for="message">Message</label>
                            <textarea name="message" id="message" rows="5"></textarea>
                        </div>
                        <ul class="actions">
                            <li><a href="" class="button submit">Send Message</a></li>
                        </ul>
                    </form>
                </section>
                <section>
                    <ul class="contact">
                        <li>
                            <h3>Email</h3>
                            <a href="#">m.szczepaniak.000@gmail.com</a>
                        </li>
                        <li>
                            <h3>Social</h3>
                            <ul class="icons">
                                <li><a href="https://github.com/verdanditeam" class="fa-github"><span class="label">GitHub</span></a></li>
                            </ul>
                        </li>
                    </ul>
                </section>
            </div>
        </div>
    </section>
